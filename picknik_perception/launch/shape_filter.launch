<?xml version="1.0" encoding="utf-8"?>
<launch>

 <!-- Load the URDF, SRDF and other .yaml configuration files on the param server -->
  <include file="$(find jacob_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- GDB Debug Option -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" 
	   value="gdb -x $(find picknik_main)/launch/debug_settings.gdb --ex run --args" />

  <!-- Main process -->
  <node name="shape_filter" pkg="picknik_perception" type="shape_filter" respawn="false" 
	launch-prefix="$(arg launch_prefix)" output="screen">

    <!-- Set the file describing which sensor(s) to use to build the octomap -->
    <rosparam command="load" file="$(find jacob_moveit_config)/config/paddings.yaml" ns="robot_description_planning"/>
    <rosparam command="load" file="$(find jacob_moveit_config)/config/sensors.yaml" />
  </node>

</launch>
