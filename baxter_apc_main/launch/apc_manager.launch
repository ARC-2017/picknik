<?xml version="1.0" encoding="utf-8"?>
<launch>

 <!-- Load the URDF, SRDF and other .yaml configuration files on the param server -->
  <include file="$(find baxter_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- GDB Debug Option -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" 
	   value="gdb -x $(find baxter_apc_main)/launch/debug_settings.gdb --ex run --args" />

  <arg name="verbose" default="0" />
  <arg name="use_experience" default="1" />
  <arg name="saving_enabled" default="1" />
  <arg name="order" default="$(find baxter_apc_main)/orders/simple.json" />
  <arg name="show_database" default="0" />

  <!-- Planning Functionality -->
  <include ns="baxter_apc_main" file="$(find baxter_moveit_config)/launch/planning_pipeline.launch.xml">
    <arg name="pipeline" value="ompl" />
  </include>

  <!-- Sensors Functionality -->
  <!--include ns="baxter_apc_main" file="$(find baxter_moveit_config)/launch/sensor_manager.launch.xml" >
    <arg name="moveit_sensor_manager" value="BAXTER" /> 
  </include-->

  <arg name="allow_trajectory_execution" default="true"/>

  <!-- Launch controller manager in this namespace -->
  <include ns="baxter_apc_main" file="$(find baxter_moveit_config)/launch/trajectory_execution.launch.xml">
    <arg name="moveit_controller_manager" value="baxter" /> 
    <arg name="moveit_manage_controllers" value="true" />
  </include>

  <!-- Main process -->
  <node name="baxter_apc_main" pkg="baxter_apc_main" type="apc_manager" respawn="false" 
	launch-prefix="$(arg launch_prefix)" output="screen" 
	args="--verbose $(arg verbose) --order $(arg order) --show_database $(arg show_database) --use_experience $(arg use_experience)">

    <rosparam command="load" file="$(find baxter_moveit_config)/config/kinematics.yaml"/>
    <rosparam command="load" file="$(find moveit_grasps)/config/baxter_grasp_data.yaml"/>

    <!-- TODO: are these still used?? -->
    <param name="saving_enabled"     if="$(arg saving_enabled)" value="true"/>
    <param name="saving_enabled" unless="$(arg saving_enabled)" value="false"/>

  </node>

</launch>
